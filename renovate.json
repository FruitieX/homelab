{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    ":automergeDigest",
    ":semanticCommits",
    ":prHourlyLimitNone",
    ":prConcurrentLimitNone"
  ],
  "kubernetes": {
    "fileMatch": [
      "\\.yaml$"
    ]
  },
  "docker": {
    "pinDigests": true
  },
  "packageRules": [
    {
      "description": "Ignore self-hosted GHCR images (managed by cross-repo dispatch)",
      "matchDatasources": [
        "docker"
      ],
      "matchPackagePrefixes": [
        "ghcr.io/fruitiex/"
      ],
      "enabled": false
    }
  ]
}